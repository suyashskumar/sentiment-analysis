<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Sentiment Analysis History</title>
    <link rel="stylesheet" href="/css/styles.css">
</head>
<body>
    <!-- Top Banner (same as homepage) -->
    <div class="top-banner">
        <h1>Sentiment Analysis History</h1>  
        <nav>
            <ul>
                <li><a href="/">Home</a></li>
                <li><a href="/history">History</a></li>
                <li><a href="/custom-input">Custom Input</a></li>
                <li><a href="#">About</a></li>
            </ul>
        </nav>
    </div>

    <!-- Main container -->
    <div class="container">
        <!-- Main Content -->
        <div class="main-content">
            <h1>Sentiment Analysis History</h1>
            <div id="history-container" class="history-box">
                <% if (history.length === 0) { %>
                    <p>No history available.</p>
                <% } else { %>
                    <table>
                        <tr>
                            <th>Text</th>
                            <th>Sentiment</th>
                            <th>Timestamp</th>
                        </tr>
                        <% history.forEach(entry => { %>
                            <tr>
                                <td><%= entry.input_text %></td>
                                <td><%= entry.sentiment_label %></td>
                                <td><%= new Date(entry.created_at).toLocaleString() %></td>
                            </tr>
                        <% }) %>
                    </table>
                <% } %>
            </div>
        </div>
    </div>

    <script src="/js/script.js"></script>
</body>
</html>